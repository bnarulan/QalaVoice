generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  iin       String    @unique
  fullName  String
  password  String
  address   String?
  role      String    @default("RESIDENT")
  createdAt DateTime  @default(now())
  posts     Post[]
  comments  Comment[]
  ratings   Rating[]
  likes     Like[]
  executor  Executor?
}

model Executor {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sphere    String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  assigned  Post[]
}

model Post {
  id           Int       @id @default(autoincrement())
  content      String
  address      String
  lat          Float?
  lng          Float?
  userId       Int
  user         User      @relation(fields: [userId], references: [id])
  type         String    @default("COMPLAINT")
  status       String    @default("SUBMITTED")
  executorId   Int?
  executor     Executor? @relation(fields: [executorId], references: [id])
  deadline     DateTime?
  createdAt    DateTime  @default(now())
  media        Media[]
  comments     Comment[]
  likes        Like[]
  statusHistory PostStatus[]
}

model PostStatus {
  id        Int      @id @default(autoincrement())
  postId    Int
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  status    String
  createdAt DateTime @default(now())
}

model Media {
  id        Int      @id @default(autoincrement())
  postId    Int
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  type      String
  url       String
  size      Int?
  createdAt DateTime @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  postId    Int
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

model Like {
  id        Int      @id @default(autoincrement())
  postId    Int
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  @@unique([postId, userId])
}

model Rating {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  score     Int
  createdAt DateTime @default(now())
}
